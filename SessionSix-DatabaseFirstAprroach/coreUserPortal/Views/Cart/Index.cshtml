
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Cart Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>Options</th>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.cart)
        {
        <tr>
            <td><a class="btn btn-outline-danger" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.Product.ProductId">Remove</a></td>
            <td>@item.Product.ProductId</td>
            <td>@item.Product.ProductName</td>
            <td>@item.Product.ProductPrice</td>
            <td>@item.Quantity</td>
            <td>@(item.Product.ProductPrice * item.Quantity)</td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="5">Total</th>
            <td>@ViewBag.total</td>
        </tr>
    </tfoot>
</table>
<br/><br/><a asp-controller="Products" class="btn btn-outline-info" asp-action="Index">Continue Shopping</a>