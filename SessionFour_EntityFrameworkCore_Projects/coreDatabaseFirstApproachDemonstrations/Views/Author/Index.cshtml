@{
}

<h2>Author Details</h2>

<table>
    <thead>
        <tr>
            <th>Author Id</th>
            <th>Author Name</th>
            <th>Author age</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in ViewBag.Authors)
        {
            <tr>
                <td>@item.AuthorId</td>
                <td>@item.AuthorName</td>
                <td>@item.AuthorAge</td>
            </tr>
        }
    </tbody>
</table>