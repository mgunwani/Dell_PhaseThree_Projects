@{
}

<h2>@ViewBag.message</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer Id</th>
            <th>Customer Name</th>
            <th>Customer Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.customers)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Amount</td>
        </tr>
        }
    </tbody>
</table>